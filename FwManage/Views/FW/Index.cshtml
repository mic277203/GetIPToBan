@model List<string>
@{
    ViewBag.Title = "黑名单列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>IP</th>
            <th style="text-align:center;width:190px;">#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
            {
            <tr>
                <td>@m</td>
                <td style="text-align:center">
                    <a href="#" style="color:red;" data-id="@m" onclick="RemoveBlackList(this)">移除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <p>One fine body…</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">确认密码</h4>
            </div>
            <div class="modal-body">
                <input type="password" class="form-control" id="txtPassword" placeholder="请输入密码">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" id="btnOk" data-loading-text="请稍后...">确定</button>
            </div>
        </div>
    </div>
</div>


@section LoadReady{
    <script type="text/javascript">
        var cip = "";

        function RemoveBlackList(obj) {
            cip = $(obj).data("id");

            $(".bs-example-modal-sm").modal('show');
        }

        $("#btnOk").on('click', function () {
            var p = $("#txtPassword").val();
            if (!p) {
                BootstrapDialog.show({
                    title: '提示',
                    message: '密码不能为空!'
                });
                return;
            }
            var $btn = $(this).button('loading');

            $.ajax({
                type: "POST",
                url: '@Url.Action("Remove","FW")',
                data: { ip: cip, password: p },
                dataType: "json",
                success: function (data) {
                    $btn.button('reset');
                    if (data.Success) {
                        window.location.href = '@Url.Action("index","FW")';
                    }
                    else {
                        BootstrapDialog.show({
                            title: '提示',
                            message: data.Message
                        });
                    }
                }
            });
        });

    </script>
}